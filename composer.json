{
    "name": "spacedmonkey/echo-js-lazy-load",
    "description": "Echo.js based lazy load plugin for WordPress",
    "homepage": "https://github.com/spacedmonkey/echo-js-lazy-load",
    "type": "wordpress-plugin",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Jonathan Harris",
            "homepage": "http://www.spacedmonkey.com/"
        }
    ],
    "support": {
        "issues": "https://github.com/spacedmonkey/echo-js-lazy-load/issues",
        "source": "https://github.com/spacedmonkey/echo-js-lazy-load/"
    },
    "require": {
        "php": ">=5.3",
        "composer/installers": "~1.0"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^1.2.1",
        "sebastian/phpcpd": "^4.1.0"
    },
    "scripts": {
        "post-install-cmd": "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs",
        "post-update-cmd": "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs"
    }
}
